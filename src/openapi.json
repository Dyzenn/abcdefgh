{
  "openapi": "3.0.0",
  "info": {
    "title": "Rubika",
    "author": "Z7:林企业",
    "version": "v1.0.0",
    "description": "Simple and easy to use API."
  },
  "servers": [
    {
      "url": "/"
    }
  ],
  "tags": [
    { "name": "AI" },
    { "name": "Anime" },
    { "name": "Downloader" },
    { "name": "Image" },
    { "name": "News" },
    { "name": "Maker" }
  ],
  "paths": {
    "/maker/brat": {
      "get": {
        "summary": "Brat Generator (GET)",
        "tags": ["Maker"],
        "parameters": [
          {
            "name": "text",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "example": "halo dunia"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Gambar WebP",
            "content": {
              "image/webp": {}
            }
          }
        }
      }
    },
    "/ai/copilot": {
      "get": {
        "summary": "Copilot Chat",
        "description": "Kirim pertanyaan ke Copilot Microsoft dan dapatkan jawaban beserta referensi/citations",
        "tags": ["AI"],
        "parameters": [
          {
            "name": "message",
            "in": "query",
            "required": true,
            "description": "Pesan atau pertanyaan yang ingin dikirim ke Copilot",
            "schema": { "type": "string" }
          },
          {
            "name": "model",
            "in": "query",
            "required": false,
            "description": "Model Copilot (default: 'default', opsional: 'think-deeper', 'gpt-5')",
            "schema": {
              "type": "string",
              "enum": ["default", "think-deeper", "gpt-5"],
              "default": "default"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Berhasil",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "text": { "type": "string", "example": "Berikut jawaban Copilot..." },
                    "citations": { "type": "array", "items": { "type": "object" } }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/ai/venice": {
      "get": {
        "summary": "Venice AI Chat",
        "tags": ["AI"],
        "parameters": [
          {
            "name": "message",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Berhasil",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "boolean" },
                    "result": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/anime/waifu": {
      "get": {
        "summary": "Waifu",
        "tags": ["Anime"],
        "responses": {
          "200": {
            "description": "Gambar PNG",
            "content": { "image/png": { "schema": { "type": "string", "format": "binary" } } }
          }
        }
      }
    },
    "/download/capcut": {
      "get": {
        "summary": "CapCut Downloader",
        "tags": ["Downloader"],
        "parameters": [
          {
            "name": "url",
            "in": "query",
            "required": true,
            "schema": { "type": "string", "format": "uri" }
          }
        ],
        "responses": {
          "200": {
            "description": "Berhasil",
            "content": { "application/json": { "schema": { "type": "object" } } }
          }
        }
      }
    },
    "/download/pinterest": {
      "get": {
        "summary": "Pinterest",
        "tags": ["Downloader"],
        "parameters": [
          {
            "name": "url",
            "in": "query",
            "required": true,
            "schema": { "type": "string", "example": "https://pin.it/lOPdveAO7" }
          }
        ],
        "responses": {
          "200": {
            "description": "Berhasil",
            "content": { "application/json": { "schema": { "type": "object" } } }
          }
        }
      }
    },
    "/download/tiktok": {
      "get": {
        "summary": "TikTok",
        "tags": ["Downloader"],
        "parameters": [
          {
            "name": "url",
            "in": "query",
            "required": true,
            "schema": { "type": "string", "format": "uri" }
          }
        ],
        "responses": {
          "200": {
            "description": "Berhasil",
            "content": { "application/json": { "schema": { "type": "object" } } }
          }
        }
      }
    },
    "/image/bluearchive": {
      "get": {
        "summary": "Blue Archive",
        "tags": ["Image"],
        "responses": {
          "200": {
            "description": "Berhasil",
            "content": { "application/json": { "schema": { "type": "object" } } }
          }
        }
      }
    },
    "/image/loli": {
      "get": {
        "summary": "loli",
        "tags": ["Image"],
        "responses": {
          "200": {
            "description": "Berhasil",
            "content": { "application/json": { "schema": { "type": "object" } } }
          }
        }
      }
    },
    "/image/mpls": {
      "get": {
        "summary": "Mpls Generator",
        "tags": ["Image"],
        "parameters": [
          {
            "name": "url",
            "in": "query",
            "required": true,
            "schema": { "type": "string", "format": "uri" }
          }
        ],
        "responses": {
          "200": {
            "description": "Image PNG",
            "content": { "image/png": { "schema": { "type": "string", "format": "binary" } } }
          }
        }
      }
    },
    "/image/papayang": {
      "get": {
        "summary": "papayang",
        "tags": ["Image"],
        "responses": {
          "200": {
            "description": "Berhasil",
            "content": { "application/json": { "schema": { "type": "object" } } }
          }
        }
      }
    },
    "/image/wallpaper": {
      "get": {
        "summary": "Wallpaper",
        "tags": ["Image"],
        "parameters": [
          { "name": "q", "in": "query", "schema": { "type": "string", "example": "Naruto" } },
          { "name": "limit", "in": "query", "schema": { "type": "integer", "example": 5 } }
        ],
        "responses": {
          "200": {
            "description": "Berhasil",
            "content": { "application/json": { "schema": { "type": "object" } } }
          }
        }
      }
    },
    "/news/detik": {
      "get": {
        "summary": "Detik News",
        "tags": ["News"],
        "responses": {
          "200": {
            "description": "Berhasil",
            "content": { "application/json": { "schema": { "type": "array", "items": { "type": "object" } } } }
          }
        }
      }
    },
    "/news/kontan": {
      "get": {
        "summary": "Kontan News",
        "tags": ["News"],
